<Page
    x:Class="KidsList.VoiceRecorder"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KidsList"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    
        <Grid>
        <TextBlock Name="title" Text="Kids List" FontSize="20"></TextBlock>
            <MediaElement x:Name="playbackElement1" ></MediaElement>
            <Button x:Name="CaptureButton" Content="Capture Audio" HorizontalAlignment="Center" Margin="29,35,226,0" VerticalAlignment="Top" Click="CaptureButton_Click" Width="145"/>
            <Button x:Name="StopCaptureButton" Visibility="Collapsed" Content="Stop Capture" HorizontalAlignment="Center" Margin="0,284,0,0" VerticalAlignment="Top" Click="StopCaptureButton_Click" Width="145"/>
            <Button x:Name="PlayRecordButton" Visibility="Collapsed" Content="Play Capture" HorizontalAlignment="Center" Margin="0,380,0,0" VerticalAlignment="Top" Click="PlayRecordButton_Click" Width="145"/>
            <Image Name="micpng" Source="Assets/microphone.png" Height="200"></Image>
            <Image Name="listpng" Source="Assets/todolist.png" Height="400" Width="200"></Image>
        </Grid>
    
</Page>
